generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  password       String?   // for credentials login

  accounts       Account[]
  sessions       Session[]
  
  // FIX: Add the missing inverse relation for Posts
  posts          Post[]    

  // Add this relation for Therapy Sessions
  therapySessions TherapySession[]
  
  // Add this relation for Tasks
  tasks           Task[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Post {
  id          String   @id @default(uuid())
  name        String
  // This relation requires 'posts' to exist on User
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
  createdAt   DateTime @default(now())
}

// NEW: The Therapy Session Store
model TherapySession {
  id              String   @id @default(cuid())
  retellCallId    String   @unique
  
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  transcript      String   @db.Text
  audioUrl        String?
  
  // Analysis Data
  summary         String   @db.Text
  emotionalState  String?
  riskFlags       String[]
  topics          String[]
  
  startedAt       DateTime @default(now())
  endedAt         DateTime?

  // Relation to Tasks generated from this session
  generatedTasks  Task[]
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  description String
  isCompleted Boolean  @default(false)
  dueDate     DateTime?
  
  // Optional: Link to the session that generated this task
  sessionId   String?
  session     TherapySession? @relation(fields: [sessionId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}